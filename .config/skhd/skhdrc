# focus window and display
hyper - j : yabai -m window --focus next || yabai -m window --focus first
hyper - k : yabai -m window --focus prev || yabai -m window --focus last

# focus desktop
hyper - o : yabai -m display --focus next || yabai -m display --focus first

# swap managed window
hyper - p : yabai -m window --swap next || yabai -m window --swap first

# move managed window
shift + cmd - h : yabai -m window --warp east

# balance size of windows
hyper - 0 : yabai -m space --balance

# focus spaces
hyper - right : yabai -m space --focus next 
hyper - left : yabai -m space --focus prev 
hyper - 1 : yabai -m space --focus 1
hyper - 2 : yabai -m space --focus 2
hyper - 3 : yabai -m space --focus 3
hyper - 4 : yabai -m space --focus 4
hyper - 5 : yabai -m space --focus 5
hyper - 6 : yabai -m space --focus 6
hyper - 7 : yabai -m space --focus 7

# send window to desktop and follow focus
hyper - l : yabai -m window --space next; yabai -m space --focus next
hyper - h : yabai -m window --space prev; yabai -m space --focus prev

# send window to monitor and follow focus
hyper - c  : yabai -m window --display next; yabai -m display --focus next || yabai -m window --display prev; yabai -m display --focus prev

# # increase window size
# hyper - a : yabai -m window --resize left:-20:0
# hyper - d : yabai -m window --resize left:-20:0
# hyper - w : yabai -m window --resize top:0:-20

# # decrease window size
# hyper - s : yabai -m window --resize bottom:0:-20
# hyper - w : yabai -m window --resize top:0:20

# set insertion point in focused container
# ctrl + alt - h : yabai -m window --insert west

# toggle window zoom
# alt - d : yabai -m window --toggle zoom-parent
# alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
alt - e : yabai -m window --toggle split

# float / unfloat window and center on screen
hyper - return : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# restart yabai
ctrl + alt + cmd - r : brew services restart yabai; brew services restart skhd

# toggle window fullscreen zoom
hyper - f : yabai -m window --toggle zoom-fullscreen

# rotate windows
hyper - r : yabai -m space --rotate 90

# STACKS
# Focus window up/down in stack
alt - j : yabai -m window --focus stack.next || yabai -m window --focus stack.prev
alt - k : yabai -m window --focus stack.prev || yabai -m window --focus stack.next

# Toggle Layout
alt - s : yabai -m config --space $(yabai -m query --spaces --space | jq -r '.index') layout stack
alt - b : yabai -m config --space $(yabai -m query --spaces --space | jq -r '.index') layout bsp

# Spotifyd
ctrl + alt - right : /usr/local/bin/spt playback --next 
ctrl + alt - left : /usr/local/bin/spt playback --previous 
ctrl + alt - down : /usr/local/bin/spt playback --toggle 
